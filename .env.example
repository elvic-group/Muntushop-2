# MuntuShop Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/muntushop

# Green API (WhatsApp)
GREEN_ID_INSTANCE=your_instance_id
GREEN_API_TOKEN_INSTANCE=your_api_token

# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# OpenAI (for AI Agent - REQUIRED for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# JWT
JWT_SECRET=your-secret-key

# URLs
FRONTEND_URL=http://localhost:5173
PORT=3000
NODE_ENV=development
